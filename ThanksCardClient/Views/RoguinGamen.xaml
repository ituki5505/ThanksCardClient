<UserControl x:Class="ThanksCardClient.Views.DepartmentCreate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThanksCardClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="社員ID"/>
                <TextBox Text="{Binding Department.Name}" Width="454"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="パスワード"/>
                <TextBox Text="{Binding Department.Name}" Width="454"/>
            </StackPanel>
            <Canvas>
                <Button Canvas.Left="500" Canvas.Top="300" Content="ログイン" Width="100" Height="40"/>
            </Canvas>
            <Canvas>
                <Button Canvas.Left="650" Canvas.Top="300" Content="クリア" Width="100" Height="40"/>
            </Canvas>
            
        </StackPanel>
    </Grid>
</UserControl>
