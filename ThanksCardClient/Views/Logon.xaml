<UserControl x:Class="ThanksCardClient.Views.Logon"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:prism="http://prismlibrary.com/"
      xmlns:local1="clr-namespace:WpfPasswordBox"
      prism:ViewModelLocator.AutoWireViewModel="True" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThanksCardClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"/>
            <TextBlock Text="Name:" />
            <TextBox Text="{Binding Employee.Name}"/>
            <TextBlock Text="Password:"/>
            <PasswordBox
            HorizontalAlignment = "Stretch"
            
                
            local1:PasswordBoxHelper.Password="{Binding Path=Employee.Password}"/>
            <StackPanel Orientation="Horizontal">
                <Canvas>
                    <Button Content="ログイン" Command="{Binding LogonCommand}" Canvas.Left="500"  Width="118"/>
                </Canvas>
                <Canvas>
                    <Button Content="クリア" Command="{Binding Cleacommand}" Width="122" Canvas.Left="650"/>
                </Canvas>
            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>